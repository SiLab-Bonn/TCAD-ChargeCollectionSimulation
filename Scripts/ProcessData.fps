# ====== Annealing ======

proc Annealing {} {
	temp_ramp name= tempramp_well time= 0.18666667 temp= 650.0 ramprate= 36.6071
	temp_ramp name= tempramp_well time= 0.33333333 temp= 1060.0 ramprate= 0.0000
	temp_ramp name= tempramp_well time= 0.14       temp= 1060.0 ramprate=-48.8095
	diffuse temp_ramp= tempramp_well
}

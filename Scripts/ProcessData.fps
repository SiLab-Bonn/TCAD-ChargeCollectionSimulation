# Load the library
source ./ProcLib.fps

# ====== Oxidation ======

proc FormSTIandSCR {} {
	# STI
	deposit nitride isotropic thickness= 0.100
	etch nitride anisotropic thickness= 0.120 mask=STI
	etch silicon type= isotropic thickness=0.4
	deposit oxide fill coord= 0
	strip nitride  
	
	# screening oxide
	deposit material= {Oxide} type= isotropic  rate= {1.0} time= 0.01
}


# ====== Implantation =====
proc ImpNW {{dim ""}} {
	set IMPL { \
		{Phosphorus 380.0	2.0e13 7.0 -90.0} \
		{Arsenic 	270.0	1.0e13 7.0 -90.0} \
		{Arsenic 	100.0	2.0e13 7.0 -90.0} \
	} 

	Implant $IMPL
}


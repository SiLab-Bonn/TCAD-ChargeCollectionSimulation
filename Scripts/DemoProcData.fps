# ====== Annealing ======

proc Annealing {} {
	temp_ramp name= tempramp_well time= 0.19 temp= 650.0 ramprate= 36.6071
	temp_ramp name= tempramp_well time= 0.4 temp= 1060.0 ramprate= 0.0000
	temp_ramp name= tempramp_well time= 0.2 temp= 1060.0 ramprate=-48.8095
	diffuse temp_ramp= tempramp_well
}

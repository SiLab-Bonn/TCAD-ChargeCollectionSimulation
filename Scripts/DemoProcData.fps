# Load the library
source ./ProcLib.fps

# ====== Oxidation ======
# A typical STI thickness of 400 nm, using simple isotripic etch.
proc FormSTIandSCR {} {
	# STI
	deposit nitride isotropic thickness= 0.100
	etch nitride anisotropic thickness= 0.120 mask=STI
	etch silicon type= isotropic thickness=0.4
	deposit oxide fill coord= 0
	strip nitride  
	
	# screening oxide
	deposit material= {Oxide} type= isotropic  rate= {1.0} time= 0.01
}


# ====== Implantation =====

# The format of defining each implantation step: {<IonType> <Energy> <Dose> <TiltAngle> <Rotation>}

proc ImpNW {{dim ""}} {
	set IMPL { \
		{Phosphorus 	400.0	2.1e13 7.0 0.0} \
		{Arsenic 	300.0	1.2e13 7.0 0.0} \
		{Arsenic 	90.0	1.8e13 7.0 0.0} \
	} 

	Implant $IMPL
}

proc ImpNPLUS {{dim ""}} {
	set IMPL { \
		{Phosphorus 	45.0	1.2e13 7.0 -90.0} \
		{Arsenic 	45.0	1.8e15 7.0 -90.0} \
	} 

	Implant $IMPL

}

